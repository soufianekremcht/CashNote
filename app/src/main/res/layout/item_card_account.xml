<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/account_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="75dp"
    app:cardCornerRadius="@dimen/spacing_tiny"
    cardview:cardUseCompatPadding="true"
    cardview:cardPreventCornerOverlap="false"
    android:layout_margin="@dimen/spacing_small"
    android:padding="@dimen/spacing_small"
    android:foreground="?selectableItemBackground"
    android:focusable="true"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/card_account_color_img"
            android:layout_width="@dimen/account_icon_size"
            android:layout_height="@dimen/account_icon_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_normal"
            android:src="@drawable/bg_circle"
            />

        <LinearLayout
            android:id="@+id/card_account_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/card_account_color_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assets"
                android:textStyle="bold"
                style="@style/style_account_card"
                />

            <TextView
                android:id="@+id/card_account_total_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="transactions"
                android:padding="@dimen/spacing_small"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/card_account_options_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            style="@style/style_account_img"
            android:src="@drawable/ic_more_black_24dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>