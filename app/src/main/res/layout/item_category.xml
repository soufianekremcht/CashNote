<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_tiny"
    android:id="@+id/category_item_layout">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/card_category_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_small"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/disabled_button"
        android:padding="@dimen/spacing_small"
        android:src="@drawable/ctg_sport"
        android:tint="@color/accent_black" />

    <TextView
        android:id="@+id/card_category_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:padding="@dimen/spacing_tiny"
        android:text="Category"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_small" />


</LinearLayout>
