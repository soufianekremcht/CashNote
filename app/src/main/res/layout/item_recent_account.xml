<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/recent_account_color_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/accent_amber"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        style="@style/recent_account_img_style"
        />

    <LinearLayout
        android:id="@+id/recent_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_toEndOf="@id/recent_account_color_img"
        >
        <TextView
            android:id="@+id/recent_account_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Name"
            style="@style/recent_account_text_style"/>

        <TextView
            android:id="@+id/recent_account_transaction_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account transaction counts"
            style="@style/recent_account_text_style"/>
    </LinearLayout>


</RelativeLayout>