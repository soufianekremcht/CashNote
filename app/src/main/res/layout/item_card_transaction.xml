<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/transactions_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_tiny"
    cardview:cardUseCompatPadding="true"
    cardview:cardPreventCornerOverlap="false"
    android:layout_margin="@dimen/spacing_small"
    android:foreground="?selectableItemBackground"
    android:focusable="true"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_small">

            <RelativeLayout
                android:id="@+id/icon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/bg_circle" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_done" />
            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/transaction_category_img"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/category_car"
                android:visibility="gone"
                />



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/icon_container"
            android:layout_margin="@dimen/spacing_small"
            >

            <TextView
                android:id="@+id/transaction_name_text"
                style="@style/CardTransactionTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="Transaction Title"
                android:padding="@dimen/spacing_small"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/transaction_last_up_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Updated : "
                android:padding="@dimen/spacing_small"
                style="@style/CardTransactionTextStyle"

                />


        </LinearLayout>

        <TextView
            android:id="@+id/transaction_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/francois_one"
            android:padding="@dimen/spacing_small"
            android:layout_margin="@dimen/spacing_small"
            android:text="$00.00"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            style="@style/CardTransactionTextStyle"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>