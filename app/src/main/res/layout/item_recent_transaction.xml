<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_small"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/recent_transaction_category_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/spacing_small"
        android:background="@drawable/bg_circle"

        android:padding="@dimen/spacing_small"
        app:tint="@color/white"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recent_transaction_description_text"
            style="@style/recent_transaction_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction" />

        <TextView
            style="@style/recent_transaction_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recent_transaction_description_text"
            android:text="@string/source" />

        <TextView
            android:id="@+id/recent_transaction_balance_text"
            style="@style/recent_transaction_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Balance" />

        <TextView
            android:id="@+id/transaction_creation_date_text"
            style="@style/recent_transaction_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recent_transaction_balance_text"
            android:layout_alignParentEnd="true"
            android:text="Date " />


    </RelativeLayout>

</LinearLayout>