<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimary"
    android:id="@+id/account_edit_layout">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        android:theme="@style/AppTheme.ThemeOverLay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/add_account_toolbar"


            android:layout_width="match_parent"

            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopUpOverLay"

            />
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:id="@+id/account_field_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <TextView
            android:id="@+id/add_account_title_text"
            style="@style/style_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Add New Account :"
            android:textColor="@color/mdtp_white"
            android:textSize="30sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner_bg"
            android:padding="@dimen/spacing_large"

            >

            <TextView
                android:id="@+id/edit_account_name_text"
                style="@style/style_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Name" />

            <EditText
                android:id="@+id/account_name_field"
                style="@style/style_account_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_account_name_text"
                android:layout_toStartOf="@id/account_color_picker"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/spacing_small"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="30"
                android:hint="Type a Name"/>

            <!--            Account Category Color-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/account_color_picker"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/edit_account_name_text"
                android:layout_alignParentEnd="true"
                android:src="@drawable/bg_circle"
                android:layout_margin="@dimen/spacing_small"

                />

            <TextView
                android:id="@+id/edit_account_desc_text"
                style="@style/style_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_name_field"
                android:text="Description" />

            <EditText
                android:id="@+id/account_desc_field"
                style="@style/style_account_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_account_desc_text"
                android:layout_margin="@dimen/spacing_small"
                android:hint="Account Description"
                android:importantForAutofill="no"
                android:inputType="textMultiLine" />


        </RelativeLayout>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/account_save_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_check_white_24dp"
        app:layout_anchor="@id/account_field_layout"
        app:layout_anchorGravity="bottom|end"
        android:contentDescription="TODO" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
