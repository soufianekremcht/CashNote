<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/card_category_card"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    cardview:cardUseCompatPadding="true"
    cardview:cardPreventCornerOverlap="false"
    android:foreground="?selectableItemBackground"
    android:layout_margin="@dimen/spacing_tiny"
    android:focusable="true"
    android:clickable="true"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/spacing_tiny">

        <TextView
            android:id="@+id/card_category_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category "
            android:textSize="@dimen/font_small"
            android:textStyle="bold"
            android:padding="@dimen/spacing_tiny"
            android:layout_gravity="center|top"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/card_category_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/spacing_small"
            android:padding="@dimen/spacing_small"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/disabled_button"
            android:src="@drawable/ctg_sport"
            android:tint="@color/accent_black"
            android:layout_gravity="center" />

    </LinearLayout>




</androidx.cardview.widget.CardView>