<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--- OverView fragment style -->

    <style name="OverViewCardTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="overview_card_style">
        <item name="cardCornerRadius">5dp</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="FragmentOverViewImgBtnStyle">
        <item name="android:padding">@dimen/spacing_small</item>
    </style>



    <style name="recent_account_text_style">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:layout_margin">@dimen/spacing_tiny</item>
    </style>
    <style name="recent_account_img_style">
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <style name="recent_transaction_text_style">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:layout_margin">@dimen/spacing_tiny</item>
    </style>

    <style name="recent_transaction_big_text_style">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <style name="overview_chart_style">
        <item name="android:layout_margin">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>
</resources>