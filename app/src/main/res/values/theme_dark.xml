    <color name="darkDivider">#10FFFFFF</color>
    <color name="dark_patch_addition_color">@color/accent_green</color>
    <color name="dark_patch_deletion_color">@color/accent_red</color>
    <color name="dark_patch_ref_color">@color/accent_blue_grey</color>
    <color name="darkWindowBackground">#313030</color>

    <style name="ThemeDark" parent="ThemeDark.Base"/>

    <style name="ThemeDark.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/accent_indigo</item>
        <item name="colorPrimaryDark">@color/accent_indigo</item>
        <item name="colorAccent">@color/accent_deep_purple</item>
        <item name="android:textCursorDrawable">@null</item>


        <!--  Material Components Colors-->
        <item name="colorSecondary">?colorAccent</item>
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <!--        <item name="colorSurface">@</item>-->
        <item name="android:windowBackground">@color/darkWindowBackground</item>

        <!--        action Bar          -->
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--         Action Mode -->
        <item name="actionModeBackground">?colorPrimary</item>

        <!--        Dialog      -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogThemeDark</item>
        <item name="android:popupBackground">@color/darkWindowBackground</item>
        <item name="android:dialogTheme">@style/DialogThemeDark</item>
        <item name="android:alertDialogTheme">@style/DialogThemeDark</item>

        <!--     Text Color      -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/accent_blue_grey</item>
        <item name="android:textColorTertiary">@color/accent_blue_grey</item>


        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:colorEdgeEffect">?colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:popupMenuStyle">@style/PopupMenuDark</item>
        <item name="android:spinnerDropDownItemStyle">@style/PopupMenuDark</item>




    </style>


