<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- show Transaction layout style-->
    <style name="ShowTransactionTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>
    <style name="ShowTransactionBigTextStyle">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <!--- Account fragment style -->

    <style name="AccountsCardViewTextStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="AccountImgStyle">
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>


    <!--- CardView -->

    <style name="CardTransactionTitleStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>
    <style name="CardTransactionTextStyle">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:padding">@dimen/spacing_tiny</item>

    </style>




</resources>